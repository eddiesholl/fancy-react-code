{
    "name": "fancy-react-code",
    "displayName": "Fancy React",
    "description": "Development tools and code generation for react development",
    "icon": "doc/F-R.png",
    "version": "1.0.1",
    "publisher": "fancy-react",
    "repository": "https://github.com/eddiesholl/fancy-react-code",
    "engines": {
        "vscode": "^1.21.0"
    },
    "categories": [
        "Programming Languages",
        "Other"
    ],
    "activationEvents": [
        "onCommand:extension.generate",
        "onCommand:extension.tests",
        "onCommand:extension.switch",
        "onLanguage:javascript",
        "onLanguage:javascriptreact",
        "onLanguage:typescript",
        "onLanguage:typescriptreact",
        "onLanguage:jsx-tags"
    ],
    "main": "./dist/extension",
    "files": [
        "dist"
    ],
    "contributes": {
        "commands": [
            {
                "command": "extension.generate",
                "title": "Generate a react component from the current JSX snippet"
            },
            {
                "command": "extension.tests",
                "title": "Generate tests for the exports from the current javascript source file"
            },
            {
                "command": "extension.switch",
                "title": "Jump back and forth between a source file and the relevant test file"
            }
        ],
        "keybindings": [
            {
                "command": "extension.generate",
                "key": "ctrl+alt+g",
                "when": "editorTextFocus"
            },
            {
                "command": "extension.tests",
                "key": "ctrl+alt+t",
                "when": "editorTextFocus"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "tslint -p ./",
        "lint:fix": "tslint -p ./ --fix",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "echo 'TODO write some tests'"
    },
    "dependencies": {
        "@types/ramda": "^0.25.32",
        "fancy-react-core": "^2.0.0",
        "ramda": "^0.25.0"
    },
    "devDependencies": {
        "@types/mocha": "^2.2.42",
        "@types/node": "^7.0.43",
        "tslint": "^5.8.0",
        "typescript": "^2.9.1",
        "vscode": "^1.1.18"
    }
}
